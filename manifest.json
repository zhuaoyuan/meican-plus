{
    "manifest_version": 2,

    "name": "Meican Plus",
    "description": "美餐网评分插件",
    "version": "1.2.4",
    "version_name": "1.2.4 beta",
    "browser_action": {
        "default_icon": "img/icon.png",
        "default_popup": "html/popup.html"
    },
    "permissions": [
        "http://*/*",
        "https://*/*"
    ],
    "icons": {
        "64": "img/icon.png"
    },
    "web_accessible_resources": ["img/star-on.png","img/star-off.png"],
    "content_scripts":[{
        "css": ["css/jquery.raty.css","css/jquery.toast.css","css/style.css"],
        "matches": ["https://meican.com/*"],
        "js": [
            "js/lib/jquery.js",
            "js/content.js",
            "js/lib/jquery.raty.js",
            "js/lib/jquery.toast.js"
        ]
    }],
    "background": {
        "scripts": ["js/background.js"],
        "persistent": false
    }
}
